extends layout

block content
  dif.row
    div.card.bg-light.col-xs-7.col-sm-7.col-md-7.col-lg-4.col-xl-4.mx-auto
      div.card-header
        h5.text-center.card-text #{maindish.dishName}
      div.card-body
        img(src=`${maindish.dishFile}`, alt="画像", height="350").card-img
        p.card-text.text-right #{maindish.formattedUpdatedAt}
        a(href=`${maindish.dishUrl}`).btn.btn-primary.stretched-link.btn-block #{maindish.dishName}のレシピ
    div.card.bg-light.col-xs-7.col-sm-7.col-md-7.col-lg-4.col-xl-4.mx-auto
      div.card-header
        h5.text-center.card-text #{subdish.dishName}
      div.card-body
        img(src=`${subdish.dishFile}`, alt="画像", height="350").card-img
        p.card-text.text-right #{subdish.formattedUpdatedAt}
        a(href=`${subdish.dishUrl}`).btn.btn-primary.stretched-link.btn-block #{subdish.dishName}のレシピ
    div.card.bg-light.col-xs-7.col-sm-7.col-md-7.col-lg-4.col-xl-4.mx-auto
      div.card-header
        h5.text-center.card-text #{soup.dishName}
      div.card-body
        img(src=`${soup.dishFile}`, alt="画像", height="350").card-img
        p.card-text.text-right #{soup.formattedUpdatedAt}
        a(href=`${soup.dishUrl}`).btn.btn-primary.stretched-link.btn-block #{soup.dishName}のレシピ
  div.my-3
    a(href="/selectGenre").btn.btn-block.btn-outline-info.btn-lg やり直す
  div.my-3
    a(href="/").btn.btn-block.btn-outline-primary.btn-lg TOPに戻る 