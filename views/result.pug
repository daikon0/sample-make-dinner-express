extends layout

block content
  div.card.bg-light
    img(src=`/menu/${maindish.dishId}/img/${maindish.dishFile}`, alt="画像").card-img-top
    div.card-body
      h5.card-header #{maindish.dishName}
      p.card-text.text-right #{maindish.formattedUpdatedAt}
